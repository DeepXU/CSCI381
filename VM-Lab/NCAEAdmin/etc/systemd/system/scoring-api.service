
[Unit]

Description=NCAE Scoring API

After=network.target postgresql.service



[Service]

WorkingDirectory=/opt/scoring-engine

Environment="PYTHONPATH=/opt/scoring-engine"

ExecStart=/opt/scoring-engine/.venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8080

Restart=always

RestartSec=5



[Install]

WantedBy=multi-user.target


